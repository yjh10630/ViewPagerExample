<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_real_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/iv_img"
        app:layout_constraintBottom_toTopOf="@id/tv_inner_count"
        app:layout_constraintStart_toStartOf="@id/iv_img"
        app:layout_constraintEnd_toEndOf="@id/iv_img"/>

    <TextView
        android:id="@+id/tv_inner_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tv_real_count"
        app:layout_constraintBottom_toBottomOf="@id/iv_img"
        app:layout_constraintStart_toStartOf="@id/iv_img"
        app:layout_constraintEnd_toEndOf="@id/iv_img"/>

</androidx.constraintlayout.widget.ConstraintLayout>