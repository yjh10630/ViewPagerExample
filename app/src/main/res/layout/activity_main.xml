<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_titld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fragment LifeCycle Test \n in PagerAdapter"
        android:gravity="center"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/vp_test1"/>

    <Button
        android:id="@+id/vp_test1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FragmentPagerAdapter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/vp_test2"
        app:layout_constraintVertical_chainStyle="packed"/>

    <Button
        android:id="@+id/vp_test2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FragmentStatePagerAdapter"
        app:layout_constraintTop_toBottomOf="@id/vp_test1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/vp_auto_paging"/>

    <Button
        android:id="@+id/vp_auto_paging"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto-Page Scrolling"
        app:layout_constraintTop_toBottomOf="@id/vp_test2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>